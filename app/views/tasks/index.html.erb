

<p id="notice"><%= notice %></p>

<h1>tasks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Details</th>
      <th>frequency</th>
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.name%></td>
        <td><%= task.task_details %></td>
        <td><%= task.frequency %></td>
        <td><%= link_to 'Show resolution', [@resolution] %></td>
        <td><%= link_to 'Edit task', edit_resolution_task_url(@resolution, task) %></td>
        <td><%= link_to 'Destroy task', [@resolution, task], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New task', new_resolution_task_path(@resolution) %>
