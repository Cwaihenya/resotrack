
  <h1 class="title"> Resolutions</h1>
    <nav class="menu">


<table class="table table-hover">
  <thead>
    <tr>
      <th>Title</th>
      <th>Details</th>
      <th class="fa-solid fa-hourglass">End date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
 <div class="contents">
    <% @resolutions.each do |resolution| %>

      <tr>
        <td class="task_row scope="row"><%= resolution.title %></td>
        <td class="details_row"><%= resolution.details %></td>
        <td class="deadline_row"><%= resolution.end_date %></td>
        <td><%= link_to 'Show', resolution, class: "btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_resolution_path(resolution), class: "btn btn-secondary"%></td>
        <td><%= link_to 'Destroy', resolution, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
      </tr>
    <% end %>
</div>
  </tbody>
</table>

<br>

